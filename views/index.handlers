<h1>History Checker</h1>

<h2>Facts are not False</h2>

<ul>
  {{#each fact}}
    {{#unless false}}
      {{> facts/fact-block false=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Facts are True</h2>

<ul>
  {{#each fact}}
    {{#if true}}
      {{> facts/fact-block true=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Fact</h2>
<form class="create-form">

  <div class="form-group">
    <label for="fa">fact Title:</label>
    <input type="text" id="fa" title="title">
  </div>

  <div class="form-group">
    <label for="fals">False?</label><br>
    <input type="radio" title="false" value="1" checked> Flase!<br>
    <input type="radio" title="false" value="0"> True
  </div>

  <button type="submit">Add Fact</button>
</form>